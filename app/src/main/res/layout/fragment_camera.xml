<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraFragment"
    android:background="@android:color/holo_blue_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/camera_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity = "center"
            android:layout_below="@id/get_text_button"
            android:layout_above="@id/camera_fragment_text"
            android:contentDescription="@string/photo_position"/>
        <Button
            android:id="@+id/get_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:text="@string/get_text_from_photo"/>
        <TextView
            android:id="@+id/camera_fragment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_text_button"
            android:text="@string/camera_fragment_text"
            android:layout_alignParentStart="true"
            android:gravity="center"/>
</RelativeLayout>

</FrameLayout>