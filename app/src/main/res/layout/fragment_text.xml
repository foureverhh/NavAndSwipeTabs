<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextFragment">

    <EditText
        android:hint="@string/text_wanted"
        android:inputType="text"
        android:id="@+id/edit_query_textPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_textFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_on_wikipedia"
        android:layout_below="@id/edit_query_textPage"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_result_textFragment"
        android:layout_below="@id/btn_textFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars = "vertical"
        android:text="@string/test_fragment"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>