<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageFragment"
    android:background="@android:color/holo_green_light">
    <ImageView
        android:id="@+id/get_photo_from_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/photo_from_gallery"/>
    <Button
        android:id="@+id/btn_get_text_photo_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_photo_from_gallery"
        android:layout_centerInParent="true"
        android:text="@string/get_photo_and_text"/>
    <TextView
        android:id="@+id/text_from_photo_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_from_photo_gallery"/>

</RelativeLayout>