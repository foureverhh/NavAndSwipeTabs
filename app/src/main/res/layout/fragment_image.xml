<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageFragment"
    android:background="@android:color/holo_green_light">
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/get_photo_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/photo_from_gallery"/>
    <LinearLayout
        android:id="@+id/button_group_image_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/get_photo_from_gallery">
        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btn_get_photo_gallery"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/get_photo"/>
        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btn_get_text_gallery"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/get_text_from_photo"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/text_from_photo_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/button_group_image_fragment"
        android:gravity="start"
        android:padding="10dp"
        android:layout_marginBottom="65dp"/>

</RelativeLayout>